<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_order"
    tools:context=".order.OrderDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutOrderDetails"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderTitleNameText"
            app:layout_constraintVertical_bias="0.574"
            app:layout_constraintWidth_percent="1.0">

            <TextView
                android:id="@+id/userNameOrderDetailsText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_2"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:gravity="center|center_vertical"
                android:text="Duta Teodor Ionut"
                android:textColor="@color/purple_700"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.075"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.95" />

            <TextView
                android:id="@+id/locationLabelOrderDetailsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/style_corners"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="Location:"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userNameOrderDetailsText"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/countyLabelOrderDetailsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/style_corners"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="County:"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationLabelOrderDetailsText"
                app:layout_constraintWidth_percent="0.25" />


            <TextView
                android:id="@+id/villageLabelOrderDetailsText"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/style_corners"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="Village:"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countyLabelOrderDetailsText"
                app:layout_constraintWidth_percent="0.25" />


            <TextView
                android:id="@+id/streetLabelOrderDetailsText"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/style_corners"
                android:fontFamily="sans-serif-black"
                android:text="Street:"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/villageLabelOrderDetailsText"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/countyOrderDetailsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_2"
                android:fontFamily="sans-serif-black"
                android:text="Calarasi"
                android:textAlignment="textStart"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@+id/countyLabelOrderDetailsText"
                app:layout_constraintTop_toBottomOf="@+id/locationLabelOrderDetailsText"
                app:layout_constraintWidth_percent="0.65" />

            <TextView
                android:id="@+id/villageOrderDetailsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_2"
                android:fontFamily="sans-serif-black"
                android:text="Lehliu"
                android:textAlignment="textStart"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@+id/villageLabelOrderDetailsText"
                app:layout_constraintTop_toBottomOf="@+id/countyOrderDetailsText"
                app:layout_constraintWidth_percent="0.65" />

            <TextView
                android:id="@+id/streetOrderDetailsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners_2"
                android:fontFamily="sans-serif-black"
                android:text="Str. Bisericii "
                android:textAlignment="textStart"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@+id/streetLabelOrderDetailsText"
                app:layout_constraintTop_toBottomOf="@+id/villageOrderDetailsText"
                app:layout_constraintWidth_percent="0.65" />

            <TextView
                android:id="@+id/dateOrderDetailsText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="45dp"
                android:layout_weight="1"
                android:background="@drawable/style_corners1"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="02/05/2021"
                android:textColor="@color/purple_700"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/streetOrderDetailsText"
                app:layout_constraintWidth_percent="0.4" />

            <TextView
                android:id="@+id/priceOrderDetailsText"
                android:layout_width="126dp"
                android:layout_height="72dp"
                android:layout_marginTop="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/baloo"
                android:gravity="center|center_vertical"
                android:text="1593"
                android:textColor="#FF0000"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintStart_toEndOf="@+id/dateOrderDetailsText"
                app:layout_constraintTop_toBottomOf="@+id/streetOrderDetailsText"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.35" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/orderTitleNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/style_corners"
            android:backgroundTint="@color/purple_700"
            android:fontFamily="@font/baloo"
            android:text="Order 24010310-13"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.95"
            tools:layout_conversion_absoluteHeight="29dp"
            tools:layout_conversion_absoluteWidth="306dp" />

        <Button
            android:id="@+id/showOrderCartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Show cart"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_baseline_expand_more"
            app:iconGravity="end"
            app:iconSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewCartOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderTitleNameText"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/showOrderDetailsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Show details"
            app:icon="@drawable/ic_baseline_expand_more"
            app:iconGravity="end"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewCartOrder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderTitleNameText"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCartOrder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderTitleNameText"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintWidth_percent="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>