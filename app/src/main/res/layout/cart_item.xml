<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/cardview_dark_background"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="9dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/background_cart"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cartBookImage"
                android:layout_width="80dp"
                android:layout_height="130dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/cartBookName"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:fontFamily="sans-serif-black"
                android:text="Attack on Titan Volume 1"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/minusBookButton"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners_1"
                    app:icon="@drawable/ic_minus_one"
                    app:iconGravity="start" />

                <TextView
                    android:id="@+id/cartBookQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:text="90" />

                <Button
                    android:id="@+id/addBookButton"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners_1"
                    app:icon="@drawable/ic_plus_one"
                    app:iconGravity="start" />

                <TextView
                    android:id="@+id/cartBookPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:text="9999 E"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#FF0000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <Button
                    android:id="@+id/deleteBookButton"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right|center_horizontal"
                    android:background="@drawable/ic_delete"
                    app:iconGravity="textEnd" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>


