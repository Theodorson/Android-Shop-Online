<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/orderNameIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCBBBD"
            android:fontFamily="@font/baloo"
            android:text="Order 24010310-13"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/orderDetailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#75714C4C"
            android:fontFamily="sans-serif"
            android:text="xcadadadsadada"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/orderPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#5673DC"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="999999E"
            android:textColor="#FF0000"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>